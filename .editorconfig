root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,json,yml,yaml,toml}]
indent_size = 2

[*.{dart}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{py}]
indent_size = 4
max_line_length = 100

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[{package.json,*.yml,*.yaml}]
indent_size = 2

